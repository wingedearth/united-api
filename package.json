{
  "name": "united-api",
  "version": "1.1.1",
  "description": "A GraphQL server for client applications to access data from services",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "prepare": "husky",
    "commitlint": "commitlint --from HEAD~1 --to HEAD --verbose",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "release:patch": "standard-version --release-as patch"
  },
  "engines": {
    "node": ">=22.16.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "@apollo/server": "^4.9.5",
    "graphql": "^16.8.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/node": "^20.9.0",
    "@vitest/ui": "^3.2.4",
    "husky": "^9.1.7",
    "standard-version": "^9.5.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2",
    "vitest": "^3.2.4"
  }
}
